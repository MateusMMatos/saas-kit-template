// .vscode/settings.json
{
  "editor.formatOnSave": true,
  "files.eol": "\n",
  "eslint.enable": true,
  "eslint.validate": ["typescript", "typescriptreact", "javascript", "json"],
  "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  "typescript.tsdk": "node_modules/typescript/lib",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/.next": true,
    "**/dist": true,
    "**/coverage": true
  },
  "git.openRepositoryInParentFolders": "always",

  // Copilot â€” melhorar contexto e priorizar testes
  "github.copilot.chat.searchScope": "workspace",
  "github.copilot.chat.codeGeneration.suggestTestFirst": true,

  // Qualidade de vida
  "editor.inlineSuggest.enabled": true,
  "editor.suggest.showSnippets": true
}
